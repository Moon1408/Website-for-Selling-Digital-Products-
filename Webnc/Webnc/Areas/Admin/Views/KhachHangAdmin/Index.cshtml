@model IEnumerable<Webnc.Models.KhachHang>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNetCore.Mvc.ViewFeatures

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="card" style="margin: 24px">
    <table>
        <thead>
            <tr>
                <th>
                    <h5 class="card-header" style="margin-right: 10%">Danh Sách Khách Hàng</h5>
                </th>
            </tr>
        </thead>
    </table>
    @if (TempData["ErrorMessage"] != null)
    {
        <div id="error-message" class="alert alert-danger" style="display: inline-block; max-width: 500px; margin-left: 20px;">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenDn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MatKhau)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HoTen)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiaChi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DienThoai)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HieuLuc)
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenDn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MatKhau)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HoTen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiaChi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DienThoai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HieuLuc)
                            </td>
                            <td>
                                <div class="d-flex justify-content-center my-3">
                                    <a class="btn btn-primary mr-3" asp-action="Edit" asp-route-id="@item.MaKh">Sửa</a>
                                    <span style=" margin-left: 1rem; margin-right: 1rem;"></span>
                                    <a class="btn btn-warning mr-3" asp-action="Details" asp-route-id="@item.MaKh">Chi tiết</a>
                                    <span style=" margin-left: 1rem; margin-right: 1rem;"></span>
                                    <button type="button" class="btn btn-danger delete-button" data-id="@item.MaKh" data-url="/Admin/KhachHangAdmin/Delete" style="color: white;">Xóa</button>
                                </div>
                            </td>
                        </tr>
                    }
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/admin1.js"> </script>
    <script src="~/js/ad_action.js"> </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}


