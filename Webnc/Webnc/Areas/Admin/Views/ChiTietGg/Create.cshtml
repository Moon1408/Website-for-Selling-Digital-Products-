@model Webnc.Models.ChiTietGg
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="col-md-6" style="margin:25px; width:96%">
    <div class="card mb-4">
        <h4 class="card-header" style="text-align:center">Thêm Giảm Giá Sản Phẩm</h4>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="mt-2 mb-3">
                        <h5>Giảm Giá</h5>
                        <select asp-for="MaGg" class="form-select form-select-lg mb-3" asp-items="@(ViewData["MaGg"] as SelectList)">
                            <option value="">-- Chọn giảm giá --</option>
                        </select>

                    </div>
                    <div class="mt-2 mb-3">
                        <h5>Hàng Hóa</h5>
                        <select asp-for="MaHh" class="form-select form-select-lg mb-3" asp-items="@(ViewData["MaHh"] as SelectList)">
                            <option value="">-- Chọn hàng hóa --</option>
                        </select>

                    </div>
                    <div style="text-align:right">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <div class="btn btn-outline-secondary white-hover-link" style="margin-left: 20px;">
                            <a asp-action="Index">Trở về</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/admin.js"></script>
}

