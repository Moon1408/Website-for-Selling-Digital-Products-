@model Webnc.Models.ChiTietGg
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="col-md-6" style="margin:25px; width:96%">
    <div class="card mb-4">
        <h4 class="card-header" style="text-align:center">Sửa phân quyền</h4>
        <div class="card-body">
            <div class="mt-2 mb-3">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MaCtgg" />
                    <div class="card-body">
                        <div class="mt-2 mb-3">
                            <h5>Giảm giá</h5>
                            <select asp-for="MaGg" class="form-select form-select-lg mb-3" asp-items="@(new SelectList(ViewBag.MaGg, "Value", "Text"))"></select>
                        </div>
                        <div class="mt-2 mb-3">
                            <h5>Hàng hóa</h5>
                            <select asp-for="MaHh" class="form-select form-select-lg mb-3" asp-items="@(new SelectList(ViewBag.MaHh, "Value", "Text"))"></select>
                        </div>
                        </br>
                        <div style="text-align:right">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <div class="btn btn-outline-secondary white-hover-link" style="margin-left: 20px;">
                                <a asp-action="Index">Trở về</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
@section scripts {
    <script src="~/js/admin.js"></script>
}


