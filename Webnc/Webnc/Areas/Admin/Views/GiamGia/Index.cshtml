@model IEnumerable<Webnc.Models.GiamGium>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />

</head>
<div class="card" style="margin: 24px">
    <table>
        <thead>
            <tr>
                <th>
                    <h5 class="card-header" style="margin-right: 10%">Danh Sách Giảm Giá</h5>
                </th>
                <th style="text-align:right; padding-right:28px">
                    <p class="btn btn-outline-primary white-hover-link">
                        <a asp-action="Create">Thêm</a>
                    </p>
                </th>
            </tr>
        </thead>
    </table>

    @if (TempData["ErrorMessage"] != null)
    {
        <div id="error-message" class="alert alert-danger" style="display: inline-block; max-width: 500px; margin-left: 20px;">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên giảm giá</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Đơn giá</th>
                        <th>Giá áp dụng</th>
                        <th>Code</th>
                        <th>Số lượng</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var item in Model)
        {
            <tr>
                            <td>
                                 @Html.DisplayFor(modelItem => item.MaGg)
                            </td>
                            <td>
                                 @Html.DisplayFor(modelItem => item.TenGg)
                            </td>
                            <th>
                                 @Html.DisplayFor(modelItem => item.NgayBd)
                            </th>
                            <th>
                                 @Html.DisplayFor(modelItem => item.NgayKt)
                            </th>
                            <th>
                                @string.Format("{0:n0} đ", item.DonGia)
                            </th>
                            <th>
                                @string.Format("{0:n0} đ", item.GiaAd)
                            </th>
                            <th>
                                 @Html.DisplayFor(modelItem => item.Code)
                            </th>
                            <th>
                                 @Html.DisplayFor(modelItem => item.Sl)
                            </th>
                            <td>
                                <div class="d-flex justify-content-center my-3">
                                    <a class="btn btn-primary mr-3" asp-action="Edit" asp-route-id="@item.MaGg">Sửa</a>
                                    <span style=" margin-left: 1rem; margin-right: 1rem;"></span>
                                    <a class="btn btn-warning mr-3" asp-action="Details" asp-route-id="@item.MaGg">Chi tiết</a>
                                    <span style=" margin-left: 1rem; margin-right: 1rem;"></span>
                                    <button type="button" class="btn btn-danger delete-button" data-id="@item.MaGg" data-url="/Admin/GiamGia/Delete" style="color: white;">Xóa</button>
                                </div>
                            </td>
                            </tr>
                            }
            </table>
        </div>
    </div>
    
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/admin1.js"> </script>
    <script src="~/js/ad_action.js"> </script>
}
    
