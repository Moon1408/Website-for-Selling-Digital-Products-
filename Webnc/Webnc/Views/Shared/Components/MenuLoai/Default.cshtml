@model IEnumerable<Webnc.ViewModels.MenuVM>
<head>
    <link rel="stylesheet" href="/css/StyleSheet.css">
</head>
    <div class="col-lg-3 col-md-4">
        <!-- Price Start -->
        <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Loại</span></h5>
        <div class="bg-light p-4 mb-30">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="custom-control d-flex align-items-center justify-content-between mb-3">
                    <a asp-controller="HangHoa" asp-action="Index" asp-route-loai="@item.MaLoai" class="menu-link">@item.TenLoai</a>
                        <span class="badge border font-weight-normal">(@item.SoLuong)</span>
                    </div>
                }
            }
            else
            {
                <p>No items available</p>
            }
        </div>
        @await Component.InvokeAsync("MenuTH")
    </div>

