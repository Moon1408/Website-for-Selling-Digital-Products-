@model Webnc.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Chi tiết đơn hàng @Model.MaHd</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Thông tin đơn hàng</h5>
            <p class="card-text">
                <strong>Họ tên:</strong> @Model.HoTen<br />
                <strong>Địa chỉ:</strong> @Model.DiaChi<br />
                <strong>Điện thoại:</strong> @Model.DienThoai<br />
                <strong>Ngày đặt:</strong> @Model.NgayDat.ToString("dd/MM/yyyy")<br />
                <strong>Tổng tiền:</strong> @Model.TongTien.ToString("N0") VND<br />
                <strong>Trạng thái:</strong> @Model.TenTrangThai<br /> <!-- Hiển thị TenTrangThai -->
            </p>

            <h5 class="card-title">Danh sách sản phẩm</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Tiền giảm giá </th>
                        <th>Tiền cuối cùng </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.TenHh</td>
                            <td>@item.SoLuong</td>
                           @*  <td>@item.DonGia.ToString("N0") VND</td>
                            <td>@item.TienCuoiCung.ToString("N0") VND</td> *@
                            <td>@string.Format("{0:n0} đ", item.DonGia)</td>
                            <td>@string.Format("{0:n0} đ", @item.TienGG)</td>
                            <td>@string.Format("{0:n0} đ", @item.TienCuoiCung)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-primary">Quay lại</a>
            </div>
        </div>
    </div>
</div>
