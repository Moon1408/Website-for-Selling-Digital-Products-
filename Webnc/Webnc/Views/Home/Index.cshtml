@using Webnc.ViewModels
@using Microsoft.AspNetCore.Mvc.Rendering

@model IEnumerable<Webnc.ViewModels.HangHoaVM>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Carousel Start -->
<div class="container-fluid mb-3">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#header-carousel" data-slide-to="1"></li>
                    <li data-target="#header-carousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item position-relative active" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="/Hinh/Laptop.jpg" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Siêu sale Laptop</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Giảm đến 50% cho tất cả các dòng Laptop chỉ duy nhất ngày 5/7</p>
                                <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="https://localhost:5000/HangHoa?loai=1001">Xem ngay</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="/Hinh/BP.png" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Siêu sale bàn phím</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Giảm đến 30% cho bàn phím máy tính chỉ duy nhất ngày 5/7</p>
                                <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="https://localhost:5000/HangHoa?loai=1002">Xem ngay</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="/Hinh/Loa.jpg" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Siêu sale loa</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Giảm đến 20% cho tất cả các loa bluetooth chỉ duy nhất ngày 24/7</p>
                                <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="https://localhost:5000/HangHoa?loai=1000">Xem ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="/Hinh/Laptop1.jpg" alt="">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">Giảm 20%</h6>
                    <h3 class="text-white mb-3">Sản phẩm nổi bật</h3>
                    <a asp-controller="HangHoa" asp-action="Index" class="btn btn-primary">Xem ngay</a>
                </div>
            </div>
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="/Hinh/BP1.jpg" alt="">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">Giảm 20%</h6>
                    <h3 class="text-white mb-3">Sản phẩm nổi bật</h3>
                    <a asp-controller="HangHoa" asp-action="Index" class="btn btn-primary">Xem ngay</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Carousel End -->
<!-- Featured Start -->

    <div class="row px-xl-5 pb-3">
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                <h1 class="fa fa-check text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Sản phẩm chất lượng</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                <h1 class="fa fa-shipping-fast text-primary m-0 mr-2"></h1>
                <h5 class="font-weight-semi-bold m-0">Miễn phí vận chuyển</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                <h1 class="fas fa-exchange-alt text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Hoàn trả trong 14 ngày</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                <h1 class="fa fa-phone-volume text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Hỗ trợ 24/7</h5>
            </div>
        </div>
    </div>

@* Gợi ý hôm nay  *@
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">GỢI Ý HÔM NAY</span></h2>
    @await Html.PartialAsync("_SP")
    <div class="text-center mt-3">
        <a asp-controller="HangHoa" asp-action="Index" class="btn btn-outline-warning">Xem thêm</a>
    </div>
</div>
@* Sản phẩm nổi bật *@
<!-- Sản phẩm nổi bật -->
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">SẢN PHẨM NỔI BẬT</span></h2>
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel related-carousel">
                @foreach (var item in ViewBag.SPNB)
                {
                    <div class="product-item bg-light">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="~/Hinh/HangHoa/@System.IO.Path.GetFileName(item.Hinh)" alt="@item.TenHH">
                        @if (!User.IsInRole("Quản lý") && !User.IsInRole("Nhân viên"))
                        {
                                <div class="product-action">
                                    <a class="ajax-add-to-cart btn btn-outline-dark btn-square" data-id="@item.MaHh"><i class="fa fa-shopping-cart"></i></a>
                                    <a class="btn btn-outline-dark btn-square" href=""><i class="far fa-heart"></i></a>
                                    <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                                    <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-search"></i></a>
                                </div>
                            }
                        </div>
                        <div class="text-center py-4">
                            <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHh"
                               class="h6 text-decoration-none text-truncate truncate-text">
                                @item.TenHH
                            </a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>@string.Format("{0:n0} đ", item.DonGia)</h5>
                            </div>
                            <div class="d-flex align-items-center justify-content-center mb-1">
                                <small class="fa fa-star text-secondary mr-1"></small>
                                <small class="fa fa-star text-secondary mr-1"></small>
                                <small class="fa fa-star text-secondary mr-1"></small>
                                <small class="fa fa-star text-secondary mr-1"></small>
                                <small class="fa fa-star text-secondary mr-1"></small>
                                <small>(0)</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="text-center mt-3">
        <a asp-controller="HangHoa" asp-action="Index" class="btn btn-outline-warning">Xem thêm</a>
    </div>
@section scripts {
    <script src="~/js/cart.js"></script>
}