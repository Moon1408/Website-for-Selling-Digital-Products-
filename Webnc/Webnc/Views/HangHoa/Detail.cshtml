@model Webnc.ViewModels.ChiTietHangHoaVM
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-30">
            @* HÌNH ẢNH *@
            <div id="product-carousel" class="carousel slide h-100" data-ride="carousel">
                <div class="carousel-inner bg-light h-100">
                    <div class="carousel-item active h-100">
                        <img class="w-100 h-100" src="~/Hinh/HangHoa/@System.IO.Path.GetFileName(Model.Hinh)" alt="@Model.TenHH">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">
                <h3>@Model.TenHH</h3>
                <div class="d-flex mb-3">
                    <div class="text-primary mr-2">
                        <small class="fa fa-star text-secondary mr-1"></small>
                        <small class="fa fa-star text-secondary mr-1"></small>
                        <small class="fa fa-star text-secondary mr-1"></small>
                        <small class="fa fa-star text-secondary mr-1"></small>
                        <small class="fa fa-star text-secondary mr-1"></small>
                    </div>
                    <small class="pt-1">(0 Reviews)</small>
                </div>
                <h3 class="font-weight-semi-bold mb-4">
                    @string.Format("{0:n0} đ", @Model.DonGia)
                </h3>

                <div class="variable-single-item">
                    <div class="product-stock">
                        <span class="product-stock-in">
                            <i class="fas fa-check-circle" style="color: #ffd700;"></i>
                        </span>
                        Còn lại @Model.SoLuongTon
                    </div>
                </div>
                <br />
                <form class="ajax-add-to-cart1" data-id="@Model.MaHh">
                    <div class="d-flex align-items-center mb-4 pt-2">
                        <div class="input-group quantity mr-3" style="width: 130px;">
                            <div class="input-group-btn">
                                <button class="btn btn-primary btn-minus" type="button">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <input type="text" class="form-control bg-secondary border-0 text-center" value="1" name="SoLuong">
                            <div class="input-group-btn">
                                <button class="btn btn-primary btn-plus" type="button">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        @if (!User.IsInRole("Quản lý") && !User.IsInRole("Nhân viên"))
                        {
                            <button type="submit" class="btn btn-primary px-3">
                                <i class="fa fa-shopping-cart mr-1"></i> Thêm vào giỏ hàng
                            </button>
                        }
                    </div>
                </form>
                @*  HIỂN THỊ TH, LOẠI, CHIA SẺ  *@
                <hr>
                <div class="product-details-catagory mb-2">
                    <span class="title">
                        Thương hiệu:
                        <span style="color: #FFD700; margin-left: 0.5rem;">@Model.TenTH</span>
                    </span>
                </div>
                <div class="product-details-catagory mb-2">
                    <span class="title">
                        Danh Mục:
                        <span style="color: #FFD700; margin-left: 0.5rem;">
                            @Model.TenLoai
                        </span>
                    </span>
                </div>
                <div class="product-details-catagory mb-2">
                    <span class="title">Chia sẻ với:</span>
                    <div class="d-inline-flex">
                        <a class="text-dark px-2" href="" style="color: #FFD700 !important;"><i class="fab fa-facebook-f"></i></a>
                        <a class="text-dark px-2" href="" style="color: #FFD700 !important;"><i class="fab fa-twitter"></i></a>
                        <a class="text-dark px-2" href="" style="color: #FFD700 !important;"><i class="fab fa-linkedin-in"></i></a>
                        <a class="text-dark px-2" href="" style="color: #FFD700 !important;"><i class="fab fa-pinterest"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<div class="row px-xl-5">
    <div class="col">
        <div class="bg-light p-30">
            <div class="nav nav-tabs mb-4">
                <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Mô tả</a>
                <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Thông số kỹ thuật</a>
                <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Đánh giá (0)</a>
            </div>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="tab-pane-1">
                    <h4 class="mb-3">Thông tin sản phẩm</h4>
                    <p>@Model.MoTaNgan</p>
                </div>
                <div class="tab-pane fade" id="tab-pane-2">
                    <h4 class="mb-3">
                        Thông tin sản phẩm
                    </h4>
                </div>
                <div class="tab-pane fade" id="tab-pane-3">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="mb-4">1 review for "Product Name"</h4>
                            <div class="media mb-4">
                                <img src="img/user.jpg" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                                <div class="media-body">
                                    <h6>John Doe<small> - <i>01 Jan 2045</i></small></h6>
                                    <div class="text-primary mb-2">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                        <i class="far fa-star"></i>
                                    </div>
                                    <p>Diam amet duo labore stet elitr ea clita ipsum, tempor labore accusam ipsum et no at. Kasd diam tempor rebum magna dolores sed sed eirmod ipsum.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h4 class="mb-4">Leave a review</h4>
                            <small>Your email address will not be published. Required fields are marked *</small>
                            <div class="d-flex my-3">
                                <p class="mb-0 mr-2">Your Rating * :</p>
                                <div class="text-primary">
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                </div>
                            </div>
                            <form>
                                <div class="form-group">
                                    <label for="message">Your Review *</label>
                                    <textarea id="message" cols="30" rows="5" class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="name">Your Name *</label>
                                    <input type="text" class="form-control" id="name">
                                </div>
                                <div class="form-group">
                                    <label for="email">Your Email *</label>
                                    <input type="email" class="form-control" id="email">
                                </div>
                                <div class="form-group mb-0">
                                    <input type="submit" value="Leave Your Review" class="btn btn-primary px-3">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Shop Detail End -->
<!-- Products Start -->
<div class="container-fluid py-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Có thể bạn cũng thích</span></h2>
    @await Html.PartialAsync("_SP", Model.SPXT)

</div>
</div>
<!-- Products End -->
<!-- Back to Top -->
<a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>

@section scripts {
    <script src="~/js/cart.js"></script>
}



